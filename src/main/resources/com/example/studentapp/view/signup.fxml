<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.studentapp.Controller.SignupController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Student Signup" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextField fx:id="usernameField" promptText="Username" />
        <PasswordField fx:id="passwordField" promptText="Password" />
        <TextField fx:id="nameField" promptText="Full Name" />
        <TextField fx:id="emailField" promptText="Email" />
        <TextField fx:id="programField" promptText="Program" />
        <TextField fx:id="semesterField" promptText="Semester" />
        <HBox spacing="10">
            <Button text="Sign Up" onAction="#handleSignup" />
            <Button text="Back to Login" onAction="#handleBackToLogin" />
        </HBox>
    </VBox>

</AnchorPane>
