<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.studentapp.Controller.LoginController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="50" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Student Login" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextField fx:id="usernameField" promptText="Username" />
        <PasswordField fx:id="passwordField" promptText="Password" />
        <HBox spacing="10">
            <Button text="Login" onAction="#handleLogin" />
            <Button text="Sign Up" onAction="#handleSignup" />
        </HBox>
    </VBox>
</AnchorPane>
