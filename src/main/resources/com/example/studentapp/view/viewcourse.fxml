<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.studentapp.Controller.ViewCoursesController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20">
        <Label text="Your Registered Courses" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <TableView fx:id="courseTable" prefHeight="250">
            <columns>
                <TableColumn fx:id="codeColumn" text="Course Code" prefWidth="150"/>
                <TableColumn fx:id="nameColumn" text="Course Name" prefWidth="250"/>
            </columns>
        </TableView>
        <HBox spacing="10">
            <Button text="Delete" onAction="#handleDelete" />
            <Button text="Back" onAction="#handleBack" />
        </HBox>
    </VBox>
</AnchorPane>
