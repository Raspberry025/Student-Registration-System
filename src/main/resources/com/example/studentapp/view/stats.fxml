<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.studentapp.Controller.StatsController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <Label text="Course Registrations per Student" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <BarChart fx:id="barChart" title="Student Course Count" prefHeight="300" prefWidth="500"
                  categoryGap="20" barGap="5">
            <xAxis>
                <CategoryAxis label="Student"/>
            </xAxis>
            <yAxis>
                <NumberAxis label="Number of Courses"/>
            </yAxis>
        </BarChart>
        <Button text="Back" onAction="#handleBack"/>
    </VBox>
</AnchorPane>
